<launch>
	<group ns="audio">
		<node name="chatbot_mic" pkg="capture_vad_sphinx" type="capture_vad_sphinx">
			<param name="bitrate" value="128"/>
			<remap from="audio" to="mic_input_stream"/>
  		</node>
	</group>
	
	<group ns="audio">
		<node name="chatbot_speaker" pkg="play_audio_new" type="play_audio_new">
			<param name="dst" value="alsasink"/>
			<remap from="audio" to="mic_input_stream"/>
		</node>
	</group>

</launch>
